@using Telerik.Sitefinity.Frontend.Forms.Mvc.Helpers;
@using Telerik.Sitefinity.Frontend.Forms.Mvc.Models.Fields.TextField;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Mvc;
@using SitefinityWebApp.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.Pages.Model;

        <div class="form-group">
            <label for="inputType">DD Entity</label>
            <div class="row">
                <div class="col-xs-6">
                    <select id="ddType" ng-model="properties.Entity.PropertyValue"  class="form-control">
                        @foreach (var key in DDEntityHelper.GetEntities(Request.Url.AbsoluteUri.Replace(Request.Url.PathAndQuery,
                                             string.Empty)).Keys){
                            <option value="@key">@key</option>
                        }
                    </select>
                </div>
            </div>
        </div>        


